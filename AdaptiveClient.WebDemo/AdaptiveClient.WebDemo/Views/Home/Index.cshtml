@using AdaptiveClient.WebDemo
@model List<HomeViewModel>
@{
    ViewData["Title"] = "AdaptiveClient Simple Web Demo";
    string title = null;
}

<style type="text/css">
    html {
        background-color: lightyellow;
    }

    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size:medium;
        color:gray;
    }
</style>

<h2>AdaptiveClient Simple Web Demo</h2>

@for (int i = 0; i < 3; i++)
{
    switch (i)
    {
        case 0:
            title = "First pass - connect to Microsoft SQL box on local area network:";
            break;
        case 1:
            title = "Second pass - connecto to MySQL box on local area network:";
            break;
        case 2:
            title = "Third pass - simulate fall back to WebAPI server:";
            break;

    }
    <div>
        <h3>@title</h3>
        <p>@Html.DisplayFor(x => x[i].GetAUserResult)</p>
        <p>@Html.DisplayFor(x => x[i].SaveAUserResult)</p>

    </div>
}
<div>
    <h4>Expected error message when LAN connectivity fails:</h4>
    <p>@Logger.Message</p>
</div>
